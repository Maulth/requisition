<div data-item-id="<%= item.id %>" class="item-container
    col-xs-6
    col-sm-4
    col-md-3
    col-lg-2">
  <h4><%= item.name %></h4>
  <a class="item-thumb">
    <%= image_tag item.image_url, class: "img-responsive img-thumbnail", alt: "Image of #{item.name}" %>
  </a>
  <br />
  <% if current_user.can_change_inventory? %>
    <div class="form-group">
      <label for="category-item-<%=item.id%>">Category</label>
      <%= select_tag :type, options_for_select(Category.names, item.type), { id: "category-item-#{item.id}", class: "form-control" } %>
    </div>
    <% if item.for_sale? %>
      <input type="checkbox" data-on-text="Y" data-off-text="N" checked>
    <% else %>
      <input type="checkbox" data-on-text="Y" data-off-text="N">
    <% end %>
  <% else %>
    <div class="form-group">
      <label>Category</label>
      <input class="form-control" type="text" disabled value="<%=item.type%>">
    </div>
    <% if item.for_sale? %>
      <span class="text-success">For Sale</span>
    <% else %>
      <span class="text-danger">Not For Sale</span>
    <% end %>
  <% end %>
</div>
