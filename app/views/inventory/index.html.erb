<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 ">
      <p class="bg-info text-center">
        Add new items to sell.
      </p>
    </div>
    <div class="panel">
      <div class="panel-body">
        <%= form_for @new_item, url: api_items_path, html: {id: "new-item", role: "form"}, remote: true do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :type_id, value: "Type id" %>
            <%= f.number_field :type_id, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.select :type, options_for_select(Item.TYPES) %>
          </div>
          <div class="form-group">
            <%= f.submit "Add Item", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 ">
      <p class="bg-info text-center">
        Select the items that you want to sell.
      </p>
    </div>
    <% @items.each do |item| %>
      <div data-item-id="<%= item.id %>" class="item-container
          col-xs-6
          col-sm-4
          col-md-3
          col-lg-2">
        <h4><%= item.name %></h4>
        <a class="item-thumb">
          <%= image_tag item.image_url, class: "img-responsive img-thumbnail" %>
        </a>
        <br />
        <% if item.for_sale? %>
          <input type="checkbox" checked data-on-text="Y" data-off-text="N">
        <% else %>
          <input type="checkbox" data-on-text="Y" data-off-text="N">
        <% end %>
      </div>
    <% end %>
  </div>
</div>
