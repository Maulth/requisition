<div class="container-fluid page-alert">
  <div class="row">
    <% flash.each do |name, msg| %>
      <%
        if name == "alert"
          name = "danger"
        elsif name == "notice"
          name = "success"
        end
      %>
      <div class="alert alert-dismissable alert-<%= name %> col-md-offset-2 col-md-8">
        <%= msg %>
        <button type="button" class="close" data-dismiss="alert">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
  </div>
</div>
